{
    "database": {
        "rules": "database.rules.json"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "functions"
    },
    "hosting": {
        "public": "public",
        // "redirects": [{
        //     "source:": "*/",
        //     "destination": "../functions/admin",
        //     "status": 301
        // }],
        "rewrites": [{
            "source": "**",
            "function": "app"
        }],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "emulators": {
        "functions": {
            "port": 5010
        },
        "firestore": {
            "port": 8080
        },
        "database": {
            "port": 9000
        },
        "hosting": {
            "port": 4080
        },
        "pubsub": {
            "port": 8085
        }
    }
}